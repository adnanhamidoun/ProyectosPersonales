<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa de fondo con borde -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000 "/> <!-- Fondo blanco -->
            <stroke
                android:width="2dp"
            android:color="#FF5722"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Capa del progreso interno -->
    <item>
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FF5722"/> <!-- Color del progreso -->
                <corners android:radius="4dp"/> <!-- MantÃ©n el mismo radio para alinearlo al borde -->
            </shape>
        </clip>
    </item>
</layer-list>