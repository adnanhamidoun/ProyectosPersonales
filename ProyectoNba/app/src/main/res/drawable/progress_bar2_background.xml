<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa de fondo con borde -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#212121 "/>
            <stroke
                android:width="2dp"
                android:color="#FFC107"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Capa del progreso interno -->
    <item>
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FFEB3B"/> <!-- Color del progreso -->
                <corners android:radius="4dp"/> <!-- MantÃ©n el mismo radio para alinearlo al borde -->
            </shape>
        </clip>
    </item>
</layer-list>